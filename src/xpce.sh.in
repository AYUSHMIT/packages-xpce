#!/bin/sh

# Run XPCE from the build-location. This   relies  on ../../swipl.sh for
# running Prolog from the build-location

if [ "@WINEPATHEXE@" = ":" ]; then
  XPCEHOME="@PCEHOME@"
else
  XPCEHOME="$(@WINEPATHEXE@ -w @PCEHOME@)"
fi
export XPCEHOME

case "$1" in
  -C) CDARGS="$1 $2"
      shift
      shift
      ;;
   *) ;;
esac

@PL@ $CDARGS -F none -f "$XPCEHOME/swipl/swipl-rc" "$@"
